<!--WELCOME-->
<div id="home-sec">
   <div class="overlay">
	  <div class="container">
		 <div class="col-md-8 pad-top scrollclass">
			<h1><strong><mark>Bienvenido </mark> a nuestro chat</strong></h1>
			   <p class="home-p">
				  Para entrar en el chat introduzca su nickname. 
				  Si su nick ya esta en uso por otro usuario, debe escoger otro para poder
				  participar. Recuerde respetar las normas del chat.
			   </p>
		 </div>
	  </div>
	  <div id="login"></div>
   </div>
</div>

<!--LOGIN-->
<section id="skill-sec">
   <div class="overlay">
	  <div class="container">
		 <div class="row text-center">
			<div id="warning-message" style="color:black">
			   <% if @control == 1 %>
				  <p class="bg-danger">Ese nick esta en uso. Elija otro.</p>
			   <% elsif @control == 2 %>
				  <p class="bg-danger">La sala de chat esta llena. Vuelva a intentarlo mas tarde.</p>
			   <% end %>
			</div>
			<form role="form">
			   <div class="form-group">
				  <h4>Para ingresar, introduce un nickname</h4>
				  <label for="name"></label>
				  <input id="nick" type="text" class="form-control" placeholder="Nickname">
			   </div>
			   <a class="btn btn-info" href="/chat" role="button">Enter to the chat!</a>
			</form>
		 </div>
	  </div>
   </div>
</section>
